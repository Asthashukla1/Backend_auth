<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create User</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 flex items-center justify-center h-screen">

  <!-- Card Container -->
  <div class="bg-zinc-800 p-8 rounded-2xl shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-semibold text-white mb-6 text-center">Create User</h2>

    <form method="post" action="/create" class="space-y-4">

      <!-- Username -->
      <input 
        class="w-full px-4 py-2 rounded-lg bg-zinc-900 border border-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
        type="text" 
        name="username" 
        placeholder="Username" 
        required>
 
      <!-- Email -->
      <input 
        class="w-full px-4 py-2 rounded-lg bg-zinc-900 border border-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
        type="email" 
        name="email" 
        placeholder="Email" 
        required>

      <!-- Password -->
      <input 
        class="w-full px-4 py-2 rounded-lg bg-zinc-900 border border-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
        type="password" 
        name="password" 
        placeholder="Password" 
        required>

      <!-- Age -->
      <input 
        class="w-full px-4 py-2 rounded-lg bg-zinc-900 border border-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
        type="number" 
        name="age" 
        placeholder="Age">

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
        Create User
      </button>
    </form>
  </div>

</body>
</html>
